---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <section class="py-16 text-center">
    <h2 class="text-4xl font-bold animation-bounce">Contact Me</h2>
    <p class="mt-4 text-lg">
      Iâ€™m always happy to connect! Please fill out the form below to send me a message directly.
    </p>
    <form 
      action="http://localhost:3001/send" 
      method="POST" 
      class="mt-8 max-w-md mx-auto space-y-6"
    >
      <input
        type="text"
        name="name"
        placeholder="Your Name"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-primary"
        required
      />
      <input
        type="email"
        name="email"
        placeholder="Your Email"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-primary"
        required
      />
      <textarea
        name="message"
        rows="5"
        placeholder="Your Message"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-primary"
        required
      ></textarea>
      <button
      type="submit"
      class="w-full text-white px-4 py-2 rounded-lg shadow transition"
      style="background: linear-gradient(to bottom right, #180cac, #d054e4);"
    >
      Submit
    </button>
    </form>
  </section>
</Layout>
